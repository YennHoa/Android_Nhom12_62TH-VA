<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView android:id="@+id/imItemCartImage"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/b1"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">
        <TextView android:id="@+id/tvItemCartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dau tay"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <TextView android:id="@+id/tvItemCartPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0d"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imItemCartPlus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_minus"
                android:layout_centerVertical="true"/>

            <TextView android:id="@+id/tvItemCartQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/imItemCartPlus"/>

            <ImageView android:id="@+id/imItemCartMinus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_minus"
                android:layout_toEndOf="@id/tvItemCartQuantity"
                android:layout_centerVertical="true"/>

            <ImageView android:id="@+id/imItemCartDelete"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_x"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>